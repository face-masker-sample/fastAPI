# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# 프로젝트 설정
PROJECT_NAME=CCTV Face Masking Control System
PROJECT_VERSION=1.0.0

# 얼굴 마스킹 모델 설정
YOLO_MODEL_REPO=arnabdhar/YOLOv8-Face-Detection
YOLO_MODEL_FILE=model.pt
FACE_CONFIDENCE_THRESHOLD=0.05
FACE_IOU_THRESHOLD=0.4
INPUT_IMAGE_SIZE=640

# 웹캠 설정 (초고속 최적화)
WEBCAM_INDEX=0
WEBCAM_WIDTH=320
WEBCAM_HEIGHT=240
WEBCAM_FPS=30

# 스트리밍 설정 (초고속 최적화)
STREAM_FPS=10
STREAM_QUALITY=40

# 녹화 설정
RECORDING_DIR=recordings
RECORDING_FORMAT=mp4v
SCREENSHOT_DIR=screenshots

# 블러 처리 설정 (성능 최적화)
BLUR_STRENGTH=15
BLUR_EXPAND_RATIO_W=0.2
BLUR_EXPAND_RATIO_H=0.3
BLUR_FADE_SIZE=10

# 로깅 설정
LOG_LEVEL=INFO

# 보안 설정 (프로덕션에서는 변경 필요)
SECRET_KEY=cctv-face-masking-secret-key-change-in-production 